<div class="page-header">
  <div class="pull-right">

    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="fa fa-cog"></span> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu pull-right">
        <li><a href="<%= DotLedger.path.sortAccount({id: id}) %>">Sort transactions</a></li>
        <li><a href="<%= DotLedger.path.editAccount({id: id}) %>">Edit account</a></li>
        <li><a href="<%= DotLedger.path.newStatement({id: id}) %>">Import statement</a></li>
        <li><a href="<%= DotLedger.path.listStatements({id: id}) %>">Statements</a></li>
      </ul>
    </div>

  </div>
  <h1><%- name %> <small><%= DotLedger.Helpers.Format.money(balance) %></small></h1>
  <small><%= type %> &mdash; <%= number %></small>
  <small class="text-muted pull-right">Updated <time datetime="<%= updated_at %>"><%= DotLedger.Helpers.Format.agoDate(updated_at) %></time></small>
</div>

<div id="graph"></div>

<div class="panel panel-default">
  <div class="panel-heading">
    <ul class="nav nav-pills nav-justified">
      <li><a href="<%= DotLedger.path.showAccount({id: id, tab: 'sorted', page: 1}) %>" data-tab-id="sorted-transactions">Sorted <span class="badge pull-right"><%= sorted_transaction_count %></span></a></li>
      <li><a href="<%= DotLedger.path.showAccount({id: id, tab: 'review', page: 1}) %>" data-tab-id="review-transactions">Review <span class="badge pull-right"><%= review_transaction_count %></span></a></li>
      <li><a href="<%= DotLedger.path.showAccount({id: id, tab: 'unsorted', page: 1}) %>" data-tab-id="unsorted-transactions">Unsorted <span class="badge pull-right"><%= unsorted_transaction_count %></span></a></li>
    </ul>
  </div>

  <div class="panel-body has-table">
    <div class="tab-content">
      <div class="tab-pane active" id="transactions"></div>
    </div>
  </div>
</div>
